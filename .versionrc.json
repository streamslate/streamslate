{
  "types": [
    { "type": "feat", "section": "✨ Features" },
    { "type": "fix", "section": "🐛 Bug Fixes" },
    { "type": "perf", "section": "⚡ Performance Improvements" },
    { "type": "refactor", "section": "♻️ Code Refactoring" },
    { "type": "docs", "section": "📚 Documentation" },
    { "type": "style", "section": "💄 Styles" },
    { "type": "test", "section": "✅ Tests" },
    { "type": "build", "section": "📦 Build System" },
    { "type": "ci", "section": "👷 CI/CD" },
    { "type": "chore", "section": "🔧 Chores" },
    { "type": "revert", "section": "⏪ Reverts" }
  ],
  "commitUrlFormat": "https://github.com/cblevins/streamslate/commit/{{hash}}",
  "compareUrlFormat": "https://github.com/cblevins/streamslate/compare/{{previousTag}}...{{currentTag}}",
  "issueUrlFormat": "https://github.com/cblevins/streamslate/issues/{{id}}",
  "userUrlFormat": "https://github.com/{{user}}",
  "releaseCommitMessageFormat": "chore(release): 🚀 v{{currentTag}}",
  "skip": {
    "bump": false,
    "changelog": false,
    "commit": false,
    "tag": false
  },
  "scripts": {
    "prerelease": "npm run lint",
    "postbump": "npm run sync-versions",
    "postchangelog": "prettier --write CHANGELOG.md"
  },
  "bumpFiles": [
    {
      "filename": "package.json",
      "type": "json"
    }
  ],
  "packageFiles": [
    {
      "filename": "package.json",
      "type": "json"
    }
  ]
}
