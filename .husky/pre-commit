#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run lint-staged for JavaScript/TypeScript files
npx lint-staged

# Run TypeScript auto-fix if there are TypeScript files staged
if git diff --cached --name-only | grep -q '\.tsx\?$'; then
  echo "üîß Running TypeScript auto-fix..."
  if node scripts/auto-fix-ts.cjs; then
    # Re-stage any fixed files
    git add -u
  fi
fi

# Run Rust checks if any Rust files are staged
if git diff --cached --name-only | grep -q '\.rs$'; then
  echo "Running Rust checks..."
  cd src-tauri
  
  # Format check
  if ! cargo fmt --all -- --check; then
    echo "‚ùå Rust formatting issues found. Run 'cargo fmt' to fix."
    exit 1
  fi
  
  # Clippy check
  if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo "‚ùå Rust clippy issues found. Please fix the warnings."
    exit 1
  fi
  
  # Run tests
  if ! cargo test --quiet; then
    echo "‚ùå Rust tests failed. Please fix the failing tests."
    exit 1
  fi
  
  cd ..
fi

echo "‚úÖ All pre-commit checks passed!"
