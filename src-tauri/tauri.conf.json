{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "StreamSlate",
    "version": "0.0.2-beta.2"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true,
        "scope": ["$RESOURCE/*", "$HOME/**", "$DOCUMENT/**", "$DESKTOP/**"]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true,
        "setAlwaysOnTop": true,
        "setDecorations": true,
        "setSkipTaskbar": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://localhost:11451/*", "ws://localhost:11451/*"]
      },
      "protocol": {
        "all": false,
        "asset": true,
        "assetScope": ["**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.streamslate.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "",
      "category": "Productivity",
      "shortDescription": "PDF annotation tool for streamers",
      "longDescription": "A desktop PDF-annotation app for live streamers and YouTubers with OBS integration",
      "macOS": {
        "hardenedRuntime": true,
        "entitlements": "./entitlements.plist",
        "signingIdentity": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost blob: data:; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; connect-src 'self' asset: https://asset.localhost http://localhost:* ws://localhost:*; font-src 'self' data:;"
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "StreamSlate",
        "width": 1200,
        "height": 800,
        "minWidth": 600,
        "minHeight": 400,
        "center": true,
        "skipTaskbar": false,
        "alwaysOnTop": false,
        "decorations": true,
        "transparent": false,
        "maximized": false,
        "visible": true
      },
      {
        "label": "presenter",
        "fullscreen": false,
        "resizable": true,
        "title": "StreamSlate - Presenter Mode",
        "width": 800,
        "height": 600,
        "minWidth": 400,
        "minHeight": 300,
        "center": false,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "decorations": false,
        "transparent": true,
        "maximized": false,
        "visible": false,
        "url": "/presenter"
      }
    ]
  }
}
