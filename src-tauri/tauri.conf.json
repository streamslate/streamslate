{
  "productName": "StreamSlate",
  "version": "1.3.0",
  "identifier": "com.streamslate.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost blob: data:; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; connect-src 'self' asset: https://asset.localhost http://localhost:* ws://localhost:*; font-src 'self' data:;",
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "StreamSlate",
        "width": 1200,
        "height": 800,
        "minWidth": 600,
        "minHeight": 400,
        "center": true,
        "skipTaskbar": false,
        "alwaysOnTop": false,
        "decorations": true,
        "transparent": false,
        "maximized": false,
        "visible": true
      },
      {
        "label": "presenter",
        "fullscreen": false,
        "resizable": true,
        "title": "StreamSlate - Presenter Mode",
        "width": 800,
        "height": 600,
        "minWidth": 400,
        "minHeight": 300,
        "center": false,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "decorations": false,
        "transparent": true,
        "maximized": false,
        "visible": false,
        "url": "/presenter"
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "Productivity",
    "shortDescription": "PDF annotation tool for streamers",
    "longDescription": "A desktop PDF-annotation app for live streamers and YouTubers with OBS integration",
    "macOS": {
      "hardenedRuntime": true,
      "entitlements": "./entitlements.plist",
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/streamslate/streamslate/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJEMjQxMEQzREFDQzNBNEMKUldSTU9zemEweEFrTFdEM2RCc3FRQlkvTkJmS3VVVHl0NkZIUHpWczZ2VXFXazUxLzRPQkFFcUQK"
    }
  }
}
