{
  "name": "streamslate",
  "private": true,
  "version": "0.0.2-beta.1",
  "description": "A desktop PDF-annotation app for live streamers and YouTubers",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "test": "cypress open",
    "test:headless": "cypress run",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "fix:ts": "node scripts/auto-fix-ts.cjs",
    "preversion": "npm run sync-versions",
    "version": "npm run sync-versions && git add -A",
    "postversion": "git push && git push --tags",
    "sync-versions": "node scripts/sync-versions.js",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "release:prerelease": "standard-version --prerelease",
    "release:beta": "standard-version --prerelease beta",
    "release:alpha": "standard-version --prerelease alpha",
    "ship:patch": "npm run release:patch && npm run ship:push",
    "ship:minor": "npm run release:minor && npm run ship:push",
    "ship:major": "npm run release:major && npm run ship:push",
    "ship:beta": "npm run release:beta && npm run ship:push",
    "ship:push": "git push --follow-tags origin main",
    "ship:gh-release": "gh release create $(git describe --tags --abbrev=0) --generate-notes --draft",
    "ship:gh-release:publish": "gh release edit $(git describe --tags --abbrev=0) --draft=false",
    "ship:complete": "npm run ship:push && npm run ship:gh-release"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.6.0",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "~4.0.379",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@tauri-apps/cli": "^1.6.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "cypress": "^13.16.1",
    "eslint": "^9.16.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.7.2",
    "vite": "^6.0.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write",
      "bash -c 'npx tsc --noEmit --pretty || true'"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ]
  }
}
